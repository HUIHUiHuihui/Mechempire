<center>
  <h1>武器列表</h1>
</center>
<div class="container main-body custom-well">
  <table class="table">
    <thead>
      <tr>
        <th>武器名称</th>
        <th>武器介绍</th>
      </tr>
    </thead>
    <tbody>
      <% @weapons.each do |m| %>
        <tr>
          <td><%= m.name %></td>
          <td><%= m.introduce %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%#= paginate @meches, :outer_window => 2 %>
</div>