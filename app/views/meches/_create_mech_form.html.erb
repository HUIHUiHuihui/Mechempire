<%= form_for(@mech, :html => {:class => "new_user"}) do |f| %>
  <%= render 'shared/mecherror_messages' %>
  <div class="form-group">
    <%= f.label :manifesto, :value => "一句话，吓死你的对手!" %><br>
    <%= f.text_field :manifesto, :class => "form-control", :placeholder => "输入战斗宣言(最长60字)"%>
  </div>
  <div class="form-group">
    <%= f.label :code, :value => "请选择代码上传(只支持zip格式):" %><br>
    <%= f.file_field :code %>
  </div>
  <div class="form-group">
    <%= f.submit :class => "btn btn-success btn-block", :value => "确认创建" %>
  </div>
<% end %>