<%= form_for(@user) do |f|%>
  <%= render 'shared/error_messages' %>
  <div class="form-group row">
    <div class="col-md-2">
      <%= f.label :password, :value => "密 码:"%>
    </div>
    <div class="col-md-10">
      <%= f.password_field :password , :class => "form-control", :placeholder => "请输入最短六位的密码"%>
    </div> 
  </div>
  <div class="form-group row">
    <div class="col-md-2">
      <%= f.label :password_confirmation, :value => "确认密码:"%>
    </div>
    <div class="col-md-10">
      <%= f.password_field :password_confirmation , :class => "form-control", :placeholder => "请输入确认密码"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <%= f.submit :class => "btn btn-success", :value => "确认修改" %>
    </div>
  </div>
<% end %>