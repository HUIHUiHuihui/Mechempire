<div class="container main-body">
  <h2>添加载器</h2>
  <hr>
  <%= form_for(@carrier) do |f|%>
    <%= render 'shared/carrier_error_messages' %>
    <div class="form-group">
      <%= f.label :iden , :value => "载器id："%><br>
      <%= f.text_field :iden , :class => "form-control", :placeholder => " 请输入载器id"%>
    </div>
    <div class="form-group">
      <%= f.label :name , :value => "载器名称："%><br>
      <%= f.text_field :name , :class => "form-control", :placeholder => " 请输入载器名称"%>
    </div>
    <div class="form-group">
      <%= f.label :introduce, :value => "载器介绍："%><br>
      <%= f.text_area :introduce , :class => "form-control", :row => 5 %>
    </div>
    <div class="form-group">
      <%= f.label :samplepic, :value => "载器图片"%><br>
      <%= f.text_field :samplepic , :class => "form-control", :placeholder => "请输入载器图片链接"%>
    </div>
    <div class="form-group">
      <%= f.submit :class => "btn btn-success btn-block", :value => "确认添加载器" %>
    </div>
  <% end %>
</div>