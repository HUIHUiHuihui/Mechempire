<center>
  <h1>载具列表</h1>
</center>
<div class="container main-body custom-well">
  <table class="table">
    <thead>
      <tr>
        <th>载具名称</th>
        <th>载具介绍</th>
      </tr>
    </thead>
    <tbody>
      <% @carriers.each do |m| %>
        <tr>
          <td><%= link_to m.name, m %></td>
          <td><%= m.introduce %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%#= paginate @meches, :outer_window => 2 %>
</div>