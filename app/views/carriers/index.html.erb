<center>
  <h1>载具列表</h1>
</center>
<div class="container main-body custom-well">
  <table class="table">
    <thead>
      <tr>
        <th>载具名称</th>
        <th>载具介绍</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @carriers.each do |m| %>
        <tr>
          <td><%= link_to m.name, m %></td>
          <td><%= m.introduce %></td>
          <td>
            <% if !current_user.nil? && current_user.admin? %>
            <%= link_to "删除", m, method: :delete,
                                          data: { confirm: "确认删除吗？" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%#= paginate @meches, :outer_window => 2 %>
</div>